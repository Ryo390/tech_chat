<div class="new_main">
  <div class="form">
    <div class="form_top">
    </div>

    <div class="form_main">
      <%= form_with model: @new_chat_path, local: true do |form| %>
      <div class="input_box">
        <div class="input_box_title">
          <%= form.text_field :title, placeholder: "タイトル" %>
        </div>
        <div class="input_box_content">
          <%= form.text_area :content, placeholder: "質問内容" %>
        </div>
        <div class="input_box_name">
          <%= form.text_field :name, placeholder: "投稿者名" %>
        </div>
        <div class="input_box_submit">
          <%= form.submit "POST" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>